<div class="page-header">
  <h1>Все статусы</h1>
</div>

<%= link_to "Добавить новый статус", new_status_path, class: "btn btn-sucess" %>

<div class="status">
  <% @statuses.each do |status| %>
    <h4><%= status.name %></h4>
    <p><em><%= status.content %></em></p>
    <div class="meta">
      <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
        <span class="admin">
          | <%= link_to "Редактировать", edit_status_path(status) %> 
          | <%= link_to "Удалить", status, method: :Delete,
          data:{confirm: "Вы действительно хотите удалить этот статус?"} %>
        </span>
    </div>
  <% end %>
</div>